{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "@types/node"
    ],
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "jsx": true
        },
        "project": "./tsconfig.json"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "indent": [0, 4],
        "arrow-parens": 0,
        "generator-star-spacing": 0,
        "no-debugger": 0,
        "eol-last": 0,
        "eqeqeq": 2,
        "camelcase": 0,
        "space-before-function-paren": 0
    }
}